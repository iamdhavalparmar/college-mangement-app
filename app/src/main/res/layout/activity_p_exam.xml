<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".principal.p_exam"
    android:orientation="vertical"
    android:layout_marginTop="40dp"
    android:layout_marginBottom="30dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardCornerRadius="12dp"
            android:elevation="3dp"
            app:contentPadding="4dp"
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            app:cardBackgroundColor="#d00fd62d"
            android:layout_margin="10dp"
            android:onClick="schedule">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/examschedule"
                    android:layout_weight="1"
                    android:layout_margin="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exam Schedule"
                    android:layout_gravity="center_vertical"
                    android:textSize="25sp"
                    android:layout_margin="5dp"
                    android:layout_weight="3"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardCornerRadius="12dp"
            android:elevation="3dp"
            app:contentPadding="4dp"
            app:cardBackgroundColor="#ddcc1448"
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            android:layout_margin="10dp"
            android:onClick="seating">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/seating"
                    android:layout_weight="1"
                    android:layout_margin="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seating Arrangment"
                    android:layout_gravity="center_vertical"
                    android:textSize="25sp"
                    android:layout_margin="5dp"
                    android:layout_weight="3"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>